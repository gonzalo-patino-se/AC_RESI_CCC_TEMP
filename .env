
# --- Django core ---
DJANGO_SECRET_KEY=replace-with-a-strong-64+char-random-string
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# --- Cookies & CSRF ---
DJANGO_SESSION_AGE=1800            # 30 minutes
DJANGO_SESSION_EXPIRE_AT_BROWSER_CLOSE=True
DJANGO_SESSION_SAVE_EVERY_REQUEST=True
DJANGO_SECURE_SSL_REDIRECT=False   # set True in production
DJANGO_SECURE_HSTS_SECONDS=0       # set >0 in production (e.g., 31536000)
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=False
DJANGO_SECURE_HSTS_PRELOAD=False
DJANGO_SECURE_REFERRER_POLICY=strict-origin
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:8000
DJANGO_CSRF_COOKIE_SECURE=False    # True in production
DJANGO_CSRF_COOKIE_SAMESITE=Lax

# --- Database (dev: sqlite; prod: override) ---
DJANGO_DB_ENGINE=sqlite
DJANGO_DB_NAME=db.sqlite3

# --- External API service ---
EXTERNAL_API_BASE_URL=https://api.example.com/v1
EXTERNAL_API_KEY=replace-with-real-key
